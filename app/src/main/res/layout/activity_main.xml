<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".SplashActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@id/menubuttons"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="129dp"
                android:layout_height="124dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/noandname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logoImageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="202013709069 Batuhan Yalçın"
                android:textSize="22dp" />

            <Button
                android:id="@+id/addlabel"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/noandname"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="46dp"
                android:text="Add Label" />

            <Button
                android:id="@+id/galery"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/addphoto"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:text="Gallery" />

            <Button
                android:id="@+id/about"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/galery"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:text="About" />

            <Button
                android:id="@+id/logout"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/about"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="9dp"
                android:text="Logout" />

            <Button
                android:id="@+id/addphoto"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/addlabel"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:text="Add Photo" />
        </RelativeLayout>

        <Button
            android:id="@+id/backmenu"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Back" />


        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/backmenu"/>
    </RelativeLayout>



</RelativeLayout>